                        <li class="nav-item px-3">
                            <a 
                                class="btn btn-link navbar navbar-expand-lg bg-dark" 
                                onclick='redirect(`<%= links.link4.url %>`)'
                                rel="noreferrer noopener" 
                                role="button"
                            >
                                <%= rootTexts['link4'][`${language}`] %>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

